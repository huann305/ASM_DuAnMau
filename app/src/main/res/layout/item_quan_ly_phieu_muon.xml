<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phiếu: 1"
                android:id="@+id/tv_ma_phieu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành viên: Vũ Bá Huấn"
                android:layout_below="@+id/tv_ma_phieu"
                android:id="@+id/tv_thanh_vien"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thủ thư: Heheheehe"
                android:layout_below="@+id/tv_thanh_vien"
                android:id="@+id/tv_thu_thu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sách: Lập trình android"
                android:layout_below="@+id/tv_thu_thu"
                android:id="@+id/tv_ten_sach"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thuê: 10000"
                android:layout_below="@+id/tv_ten_sach"
                android:id="@+id/tv_tien_thue"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="8dp"
                android:id="@+id/btn_delete"/>

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btn_delete"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/baseline_edit_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Đã trả sách"
                android:id="@+id/tv_da_tra_sach"
                android:layout_below="@id/btn_delete"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Ngày mượn: 30/05/2004"
                android:layout_below="@id/tv_da_tra_sach"
                android:id="@+id/tv_ngay_muon"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>